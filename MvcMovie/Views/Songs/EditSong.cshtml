@model MvcMovie.Models.Songs

@{
    ViewData["Title"] = "Editsong";
}
<h4>Update the Song</h4>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Editsong">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Songname" class="control-label"></label>
                <input asp-for="Songname" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="SongAuthor" class="control-label"></label>
                <input asp-for="SongAuthor" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="SongGenre" class="control-label"></label>
                <input asp-for="SongGenre" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="SongRelaeaseDate" class="control-label"></label>
                <input asp-for="SongRelaeaseDate" class="form-control" />
            </div>

            <div class="form-group">
                <input type="submit" value="Edit Song" class="btn btn-success btn-sm" />
            </div>
        </form>
    </div>
    <div class="col-md-8">

    </div>
</div>
<div>
    <a asp-action="Index">Back To Home</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}